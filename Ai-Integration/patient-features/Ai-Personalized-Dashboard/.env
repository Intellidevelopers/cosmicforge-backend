# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/ai_dashboard
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# JWT Configuration
SECRET_KEY=your_very_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_REPO_ID=your-repo/health-models

# Data Integration APIs
WEARABLE_API_URL=https://api.wearabledevice.com
EHR_API_URL=https://api.ehrsystem.com
LAB_RESULTS_API_URL=https://api.labresults.com
MAX_DATA_SOURCES_PER_USER=5

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=True
SMS_NOTIFICATIONS_ENABLED=False
PUSH_NOTIFICATIONS_ENABLED=True
NOTIFICATION_SERVICE_URL=https://api.notificationservice.com

# Privacy Settings
DEFAULT_SHARE_DATA_WITH_DOCTORS=True
DEFAULT_SHARE_ANONYMIZED_DATA=False

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/ai_dashboard.log

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Feature Flags
ENABLE_AI_PREDICTIONS=True
ENABLE_REAL_TIME_ALERTS=True

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External Services
WEATHER_API_URL=https://api.weatherservice.com
AIR_QUALITY_API_URL=https://api.airqualityservice.com

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh

# Health Data Thresholds
NORMAL_HEART_RATE_MIN=60
NORMAL_HEART_RATE_MAX=100
NORMAL_BLOOD_PRESSURE_SYSTOLIC_MAX=120
NORMAL_BLOOD_PRESSURE_DIASTOLIC_MAX=80
NORMAL_GLUCOSE_MIN=70
NORMAL_GLUCOSE_MAX=100
NORMAL_CHOLESTEROL_MAX=200

# Health Score Calculation
HEALTH_SCORE_WEIGHT_HEART_RATE=0.2
HEALTH_SCORE_WEIGHT_BLOOD_PRESSURE=0.3
HEALTH_SCORE_WEIGHT_GLUCOSE=0.25
HEALTH_SCORE_WEIGHT_CHOLESTEROL=0.25

# AI Model Configuration
MODEL_UPDATE_FREQUENCY=24
HEALTH_SCORE_MODEL_NAME=health_score_model.joblib
HEALTH_PLAN_MODEL_NAME=health_plan_model.joblib

# Data Retention Policy (days)
DATA_RETENTION_PERIOD=365

# User Preferences
MAX_HEALTH_GOALS=5
DEFAULT_DASHBOARD_LAYOUT=default
DASHBOARD_LAYOUTS=default,compact,detailed,minimal

# Telemedicine Integration
TELEMEDICINE_ENABLED=True
TELEMEDICINE_PROVIDER_URL=https://api.telemedicine-provider.com

# Emergency Services
EMERGENCY_SERVICES_NUMBER=911

# System Maintenance Window
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00

# API Version
API_VERSION=v1

# File Upload Limit
MAX_UPLOAD_SIZE_MB=10

# Application Environment
FLASK_ENV=development

# Alert System Configuration
ALERT_CHECK_INTERVAL=15  # minutes
CRITICAL_ALERT_THRESHOLD=0.8

# Data Preprocessing
DATA_NORMALIZATION_METHOD=z-score
OUTLIER_DETECTION_METHOD=iqr

# Security
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_SALT_ROUNDS=12
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Performance
ASYNC_REQUEST_TIMEOUT=30  # seconds
